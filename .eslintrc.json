{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": ["error", {"argsIgnorePattern": "^_", "varsIgnorePattern": "^_"}],
        "react/prop-types": "off",
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
